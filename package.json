{
  "name": "testing-javascript",
  "version": "1.0.0",
  "description": "This is the project created while learning JavaScript testing from (https://testingjavascript.com).",
  "main": "index.js",
  "scripts": {
    "build": "babel src --out-dir dist",
    "lint": "eslint --ignore-path .gitignore .",
    "prettier": "prettier --ignore-path .gitignore",
    "format": "yarn prettier -- --write .",
    "check-format": "yarn prettier -- --list-different .",
    "validate": "yarn format && yarn lint && yarn test && yarn build",
    "validate-parallel": "npm-run-all --parallel format lint test build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch"
  },
  "author": "Vishwanath.R",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.12.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.13.0",
    "husky": "^4.3.0",
    "jest": "^26.6.0",
    "lint-staged": "^10.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2"
  },
  "dependencies": {
    "react": "^16.14.0",
    "react-dom": "^16.14.0"
  }
}
